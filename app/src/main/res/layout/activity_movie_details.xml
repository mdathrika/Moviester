<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_centerInParent="true"
    android:background="#80000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:id="@+id/details_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_title"
        android:textSize="25sp"
        android:paddingBottom="5dp"
        android:gravity="left"
        android:layout_below="@id/details_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_releasedate"
        android:textSize="12sp"
        android:textStyle="italic"
        android:paddingBottom="5dp"
        android:gravity="left"
        android:layout_below="@id/details_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_releasedate"
        android:paddingBottom="10dp"
        android:id="@+id/layoutRating">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_white"
            android:id="@+id/details_rating1"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_white"
            android:id="@+id/details_rating2"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_white"
            android:id="@+id/details_rating3"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_white"
            android:id="@+id/details_rating4"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_white"
            android:id="@+id/details_rating5"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_overview"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_below="@id/layoutRating"/>

</RelativeLayout>